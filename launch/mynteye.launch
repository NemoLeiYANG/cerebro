<!-- ### In HKUST Academic block and CYT UG -->
<!-- <arg name="bag_file" default="2018-11-29-15-13-44.bag" doc="CYT UG floor"/> -->
<!-- <arg name="bag_file" default="2018-11-29-15-22-50.bag" doc="academic concourse"/> -->
<!-- <arg name="bag_file" default="2018-11-29-15-30-39.bag" doc="near coffee shop 1"/> -->
<!-- <arg name="bag_file" default="2018-11-29-15-36-41.bag" doc="seng"/> -->
<!-- <arg name="bag_file" default="2018-12-13-16-48-46.bag" doc="seng3"/> -->
<!-- <arg name="bag_file" default="2018-12-13-16-56-36.bag" doc="concourse-seng4"/> -->



<!-- ### Kidnap sequences -->
<arg name="bag_file" default="/kidnap/2019-01-14-17-20-06.bag" doc="lab kidnap"/>


<node pkg="rosbag" type="play" name="rosbag" args="$(arg bag_path)/$(arg bag_file) -s 2" output="log"/>

<!-- ############################# DONE BAGS #######################################  -->


<!-- for TUM VIO Dataset `PINHOLE` does not work well. KANNALA_BRANDT works OK! -->
<!-- <arg name="config_path" default="$(find cerebro)/config/mynteye_pinhole/mynteye_config.yaml" /> -->
<!-- <arg name="config_path" default="$(find cerebro)/config/mynteye/mynteye_config.yaml" /> -->
<arg name="config_path" default="$(find cerebro)/config/mynteye_kannala_brandt/mynteye_config.yaml" />
<arg name="vins_path" default="$(find feature_tracker)/../config/../" />


<!-- a) set loop_closure_enable=1 will enable loop closure. 0 will disable
     b) set loop_closure_type="1" will use cerebro-loopclosure by mpkuse,
         loop_closure_type="0" will use vins-mono-default loopclosure. please don't set this to anything other than 0 or 1
 -->
<arg name="loop_closure_enable" default="1" />
<arg name="loop_closure_type" default="1" />


<!-- VINS-MONO Odometry -->
<node name="feature_tracker" pkg="feature_tracker" type="feature_tracker" output="log">
    <param name="config_file" type="string" value="$(arg config_path)" />
    <param name="vins_folder" type="string" value="$(arg vins_path)" />
</node>

<node name="vins_estimator" pkg="vins_estimator" type="vins_estimator" output="log">
   <param name="config_file" type="string" value="$(arg config_path)" />
   <param name="vins_folder" type="string" value="$(arg vins_path)" />
</node>


<group if="$(loop_closure_enable)" >
    <group unless="$(arg loop_closure_type)">
    <!-- vins-mono default loop closure/pose-graph opt node -->
        <node name="pose_graph" pkg="pose_graph" type="pose_graph" output="screen">
            <param name="config_file" type="string" value="$(arg config_path)" />
            <param name="visualization_shift_x" type="int" value="0" />
            <param name="visualization_shift_y" type="int" value="0" />
            <param name="skip_cnt" type="int" value="0" />
            <param name="skip_dis" type="double" value="0" />
        </node>
    </group>

    <group if="$(arg loop_closure_type)" >
    <!-- Cerebro -->
        <node name="cerebro_node" pkg="cerebro" type="cerebro_node" output="screen">
           <param name="config_file" type="string" value="$(arg config_path)" />
        </node>

        <node name="whole_image_desc_compute_server" pkg="cerebro" type="whole_image_desc_compute_server.py" output="log">
           <param name="config_file" type="string" value="$(arg config_path)" />
        </node>


    <!-- Graph-based Pose Graph Optimization Solver -->
    <!-- rosrun solve_keyframe_pose_graph keyframe_pose_graph_slam -->
        <node name="keyframe_pose_graph_slam_node" pkg="solve_keyframe_pose_graph" type="keyframe_pose_graph_slam" output="log" >
        </node>
    </group>
</group>
</launch>
